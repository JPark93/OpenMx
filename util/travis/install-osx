#!/bin/bash

set -ve

# Workaround for travis-ci/travis-ci#8973
python -c "import fcntl; fcntl.fcntl(1, fcntl.F_SETFL, 0)"

cp ./util/gcc.conf ~/.R/Makevars

xcodebuild -version | head -n 1 | cut -d ' ' -f 2

# for macos 10.11 :

curl -Lo /tmp/gcc.tar.gz 'https://sourceforge.net/projects/hpc/files/hpc/gcc/gcc-7.1-bin.tar.gz/download'
curl -Lo /tmp/gfort.tar.gz 'https://sourceforge.net/projects/hpc/files/hpc/g95/gfortran-7.1-bin.tar.gz/download'

sudo tar -zxvf /tmp/gcc.tar.gz -C /
sudo tar -zxvf /tmp/gfort.tar.gz -C /

R --no-save -f util/update-dependencies.R --args ./DESCRIPTION.in

which otool
