#!/bin/bash

set -ve

# Workaround for travis-ci/travis-ci#8973
python -c "import fcntl; fcntl.fcntl(1, fcntl.F_SETFL, 0)"

cp ./util/gcc.conf ~/.R/Makevars

xcodebuild -version | head -n 1 | cut -d ' ' -f 2

id

sudo rm -rf /usr/local/lib/gcc
sudo rm -rf /usr/local/include/c++

curl -Lo /tmp/gcc.tar.gz 'https://sourceforge.net/projects/hpc/files/hpc/gcc/gcc-8.3-bin.tar.gz/download'
curl -Lo /tmp/gfort.tar.gz 'https://sourceforge.net/projects/hpc/files/hpc/g95/gfortran-8.3-bin.tar.gz/download'

sudo rm -rf /usr/local/lib/gcc
sudo rm -rf /usr/local/include/c++

sudo gtar --no-overwrite-dir --owner=travis --group=staff -zxf /tmp/gcc.tar.gz -C /
sudo gtar --no-overwrite-dir --owner=travis --group=staff -zxf /tmp/gfort.tar.gz -C /

sed -i.bak 's/-isysroot /-I/g' $(R RHOME)/etc/Makeconf

R --no-save -f util/update-dependencies.R --args ./DESCRIPTION.in

which otool
which gcc
which g++
which gfortran
gcc --version
g++ --version
gfortran --version
